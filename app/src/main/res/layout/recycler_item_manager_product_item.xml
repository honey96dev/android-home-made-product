<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/dimen_margin2"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_margin1"
    app:cardElevation="@dimen/dimen_margin1"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0"
            android:layout_marginStart="@dimen/dimen_margin3"
            android:layout_marginTop="@dimen/dimen_margin3"
            android:layout_marginEnd="@dimen/dimen_margin3"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_margin2"
            android:layout_marginTop="@dimen/dimen_margin2"
            android:layout_marginEnd="@dimen/dimen_margin3"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_textSize4"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view" />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_margin3"
            android:textAlignment="center"
            android:textSize="@dimen/dimen_textSize2"
            app:layout_constraintEnd_toEndOf="@+id/title_text_view"
            app:layout_constraintStart_toStartOf="@+id/title_text_view"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>